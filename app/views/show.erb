<table>
  <thead><tr>
    <th>Student Name</th>
    <%@assignments.each do |assign|%>
      <th><%=assign.name%></th>
    <%end%>
  </tr></thead>

  <tbody>
    <%@students.each do |student|%>
      <tr>
      <td><%=student.name%></td>
        <%student.assignments.each do |assign|%>
          <td><%=student.submissions.find {|s| s.assignment_id == assign.id}.try(:grade)%></td>
        <%end%>
      </tr>
    <%end%>
</tbody>
</table>
